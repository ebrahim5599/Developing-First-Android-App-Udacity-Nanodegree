<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShoeListFragment">

    <!-- CoordinatorLayout to let us add floating button over the screen   -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ScrollView to allow user scroll views down and up if the screen is small-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- LinearLayout to make views vertical or horizontal order-->
            <LinearLayout
                android:id="@+id/linearLayoutShoeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_round_add_24" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>